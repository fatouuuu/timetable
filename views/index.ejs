<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Timetable</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .modal-content {
            background-color: #fef6e4; /* Light orange background */
        }
        .toast {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1050;
            min-width: 200px;
        }
        .success-toast {
            background-color: #d4edda; /* Light green background */
            color: #155724; /* Dark green text */
        }
        .error-toast {
            background-color: #f8d7da; /* Light red background */
            color: #721c24; /* Dark red text */
        }
    </style>
</head>
<body class="bg-white text-gray-800">
    <div class="container mx-auto my-5">
        <h1 class="text-2xl font-bold mb-4">School Timetable</h1>
        <% if (message) { %>
            <div class="alert <%= message.success ? 'alert-success' : 'alert-danger' %>" role="alert">
                <%= message %>
            </div>
        <% } %>
        <form action="/generate" method="post">
            <button type="submit" class="bg-blue-500 text-white p-2 rounded">Generate Timetable</button>
        </form>
        <table class="min-w-full bg-white border border-gray-300 mt-4">
            <thead>
                <tr class="bg-gray-200">
                    <th class="py-2 px-4 border-b">Day</th>
                    <th class="py-2 px-4 border-b">8-9am</th>
                    <th class="py-2 px-4 border-b">9-10am</th>
                    <th class="py-2 px-4 border-b">10-11am</th>
                    <th class="py-2 px-4 border-b">11am-12pm</th>
                    <th class="py-2 px-4 border-b">1-2pm</th>
                    <th class="py-2 px-4 border-b">2-3pm</th>
                    <th class="py-2 px-4 border-b">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% timetable.forEach((day, dayIndex) => { %>
                    <tr>
                        <td class="py-2 px-4 border-b"><%= day.day %></td>
                        <% day.schedule.forEach((subject, slotIndex) => { %>
                            <td class="py-2 px-4 border-b">
                                <% if (subject) { %>
                                    <%= subject %> 
                                <% } else { %>
                                    Free
                                <% } %>
                            </td>
                        <% }) %>
                        <td class="py-2 px-4 border-b">
                            <button class="bg-blue-500 text-white p-2 rounded edit-button" 
                                    data-day="<%= dayIndex %>" 
                                    data-slot="<%= day.schedule.findIndex(slot => slot === null) %>">Edit</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Edit Slot Modal -->
        <div class="modal fade" id="editSlotModal" tabindex="-1" aria-labelledby="editSlotModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editSlotModalLabel">Edit Slot</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editSlotForm">
                            <div class="mb-3">
                                <label for="slot" class="form-label">Select Slot</label>
                                <select id="slot" name="slot" class="form-select" required>
                                    <option value="" disabled selected>Select Slot</option>
                                    <% timetable[0].schedule.forEach((_, index) => { %>
                                        <option value="<%= index %>">Slot <%= index + 1 %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Select Subject</label>
                                <select id="subject" name="subject" class="form-select" required>
                                    <option value="" disabled selected>Select Subject</option>
                                    <% subjects.forEach(subject => { %>
                                        <option value="<%= subject %>"><%= subject %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <input type="hidden" id="dayIndex" name="dayIndex" />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                        <!-- <div id="hintMessage" class="mt-3"></div> -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Hint Modal -->
        <!-- <div class="modal fade" id="hintModal" tabindex="-1" aria-labelledby="hintModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="hintModalLabel">Hint</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="hintMessageContent">Kindly pick another subject.</p>
                    </div>
                </div>
            </div>
        </div> -->

        <!-- Success/Error Toast -->
        <div id="toast" class="toast" role="alert">
            <div class="toast-body"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const editButtons = document.querySelectorAll('.edit-button');
            const editSlotModal = new bootstrap.Modal(document.getElementById('editSlotModal'));
            // const hintModal = new bootstrap.Modal(document.getElementById('hintModal'));
            const toast = document.getElementById('toast');
            const toastBody = document.querySelector('#toast .toast-body');

            editButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const dayIndex = button.getAttribute('data-day');
                    const slotIndex = button.getAttribute('data-slot');
                    document.getElementById('dayIndex').value = dayIndex;
                    document.getElementById('slot').value = slotIndex;
                    editSlotModal.show();
                });
            });

            $('#editSlotForm').on('submit', function(e) {
                e.preventDefault();
                const formData = $(this).serialize();
                $.ajax({
                    type: 'POST',
                    url: '/edit-slot',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            toastBody.innerHTML = response.message;
                            toast.classList.add('success-toast');
                            editSlotModal.hide();

                        } else {
                            toastBody.innerHTML = response.message;
                            toast.classList.add('error-toast');
                            
                        }
                        new bootstrap.Toast(toast).show();
                    }
                });
            });
        });
    </script>
</body>
</html>
