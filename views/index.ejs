<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Timetable</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .modal-content {
            background-color: #fef6e4; 
        }
        .toast {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1100; 
            min-width: 250px;
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }
        .toast.show {
            opacity: 1;
        }
        .success-toast {
            background-color: #a3cfbb; 
            color: #0a3622; 
        }
        .error-toast {
            background-color: #f2bbbb; 
            color: rgb(104, 20, 20); 
        }
    </style>
</head>
<body class="bg-white text-gray-800">
    <div class="container mx-auto my-5 px-4">
        <h1 class="text-2xl sm:text-3xl font-bold mb-4">School Timetable</h1>
        <% if (message && message.text) { %>
            <div class="alert <%= message.success ? 'alert-success' : 'alert-danger' %>" role="alert">
                <%= message.text %>
            </div>
        <% } %>        
        <form action="/generate" method="post">
            <button type="submit" class="bg-blue-500 text-white p-2 rounded mb-4">Generate Timetable</button>
        </form>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="py-2 px-4 border-b">Day</th>
                        <th class="py-2 px-4 border-b">8-9am</th>
                        <th class="py-2 px-4 border-b">9-10am</th>
                        <th class="py-2 px-4 border-b">10-11am</th>
                        <th class="py-2 px-4 border-b">11am-12pm</th>
                        <th class="py-2 px-4 border-b">1-2pm</th>
                        <th class="py-2 px-4 border-b">2-3pm</th>
                        <th class="py-2 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% timetable.forEach((day, dayIndex) => { %>
                        <tr>
                            <td class="py-2 px-4 border-b"><%= day.day %></td>
                            <% day.schedule.forEach((subject, slotIndex) => { %>
                                <td class="py-2 px-4 border-b">
                                    <% if (subject) { %>
                                        <%= subject %> 
                                    <% } else { %>
                                        Free
                                    <% } %>
                                </td>
                            <% }) %>
                            <td class="py-2 px-4 border-b">
                                <button class="bg-blue-500 text-white p-2 rounded edit-button" 
                                        data-day="<%= dayIndex %>" 
                                        data-slot="<%= day.schedule.findIndex(slot => slot === null) %>">Edit</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="modal fade" id="editSlotModal" tabindex="-1" aria-labelledby="editSlotModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editSlotModalLabel">Edit Slot</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editSlotForm">
                            <div class="mb-3">
                                <label for="slot" class="form-label">Select Slot</label>
                                <select id="slot" name="slot" class="form-select" required>
                                    <option value="" disabled selected>Select Slot</option>
                                    <% timetable[0].schedule.forEach((_, index) => { %>
                                        <option value="<%= index %>">Slot <%= index + 1 %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Select Subject</label>
                                <select id="subject" name="subject" class="form-select" required>
                                    <option value="" disabled selected>Select Subject</option>
                                    <% subjects.forEach(subject => { %>
                                        <option value="<%= subject %>"><%= subject %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <input type="hidden" id="dayIndex" name="dayIndex" />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div id="toast" class="toast" role="alert">
            <div class="toast-body"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const editButtons = document.querySelectorAll('.edit-button');
            const editSlotModal = new bootstrap.Modal(document.getElementById('editSlotModal'));
            const toast = document.getElementById('toast');
            const toastBody = document.querySelector('#toast .toast-body');

            editButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const dayIndex = button.getAttribute('data-day');
                    const slotIndex = button.getAttribute('data-slot');
                    document.getElementById('dayIndex').value = dayIndex;
                    document.getElementById('slot').value = slotIndex;
                    editSlotModal.show();
                });
            });

            $('#editSlotForm').on('submit', function(e) {
                e.preventDefault();
                const formData = $(this).serialize();
                $.ajax({
                    type: 'POST',
                    url: '/edit-slot',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            toastBody.innerHTML = response.message;
                            toast.classList.remove('error-toast');
                            toast.classList.add('success-toast');
                            editSlotModal.hide();
                        } else {
                            toastBody.innerHTML = response.message;
                            toast.classList.remove('success-toast');
                            toast.classList.add('error-toast');
                        }
                        toast.classList.add('show');
                        new bootstrap.Toast(toast).show();

                        setTimeout(() => {
                            toast.classList.remove('show');
                        }, 3000); 
                    }
                });
            });
        });
    </script>
</body>
</html>
